<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>



<VBox spacing="10" alignment="TOP_LEFT"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml" fx:controller="uniajc.controlador.CrearCuentaControlador" spacing="10" alignment="CENTER" padding="20">

    <Label text="Registrar Cuenta" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <TextField fx:id="txtNombre" promptText="Nombre completo"/>
    <TextField fx:id="txtCorreo" promptText="Correo electrónico"/>
    <PasswordField fx:id="txtContrasena" promptText="Contraseña"/>
    <PasswordField fx:id="txtConfirmar" promptText="Confirmar contraseña"/>
    <TextField fx:id="txtTelefono" promptText="Teléfono"/>

    <ComboBox fx:id="cmbRol" promptText="Seleccione un rol"/>

    <!-- Aquí aparecerán los campos específicos del rol -->
    <VBox fx:id="boxCamposRol" spacing="8" />

    <Button text="Crear cuenta" onAction="#crearCuenta"/>
    <Label fx:id="lblMensaje"/>
    <Label fx:id="lblRolSeleccionado"/>
</VBox>