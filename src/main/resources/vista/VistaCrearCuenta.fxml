<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" fillWidth="false" prefHeight="550.0" prefWidth="400.0" spacing="15" style="-fx-background-color: #fff7e4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uniajc.controlador.CuentaControladorVista">

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Registrar Cuenta" textAlignment="CENTER" textFill="#b1452d">
      <font>
         <Font name="SansSerif Regular" size="12.0" />
      </font></Label>

    <!-- Selección de rol -->
    <ComboBox fx:id="cmbRol" onAction="#mostrarCamposPorRol" prefWidth="250" promptText="Seleccione su rol" style="-fx-background-color: b1452d;">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <effect>
         <Glow />
      </effect></ComboBox>

    <!-- Campos comunes -->
    <TextField fx:id="txtNombre" prefWidth="250.0" promptText="Nombre completo">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
      <effect>
         <Glow />
      </effect></TextField>
    <TextField fx:id="txtCorreo" prefWidth="250.0" promptText="Correo electrónico">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
      <effect>
         <Glow />
      </effect></TextField>
    <PasswordField fx:id="txtContrasena" prefWidth="250.0" promptText="Contraseña">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
      <effect>
         <Glow />
      </effect></PasswordField>
   <PasswordField fx:id="txtConfirmar" layoutX="50.0" layoutY="177.0" prefWidth="250.0" promptText="Confirmar contraseña">
      <VBox.margin>
         <Insets left="50.0" right="50.0" />
      </VBox.margin>
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
      <effect>
         <Glow />
      </effect></PasswordField>
   <TextField fx:id="txtTelefono" prefWidth="250.0" promptText="Teléfono">
      <cursor>
         <Cursor fx:constant="TEXT" />
      </cursor>
   </TextField>

    <!-- Contenedor dinámico para campos del rol -->
    <VBox fx:id="boxCamposRol" alignment="CENTER" prefWidth="250.0" spacing="10">
        <!-- Aquí se añadirán los campos dinámicos según el rol -->
    </VBox>

    <!-- Botón para crear la cuenta -->
    <Button fx:id="btnCrearCuenta" contentDisplay="CENTER" defaultButton="true" onAction="#crearCuenta" prefHeight="30.0" prefWidth="150.0" style="-fx-background-color: b1452d; -fx-text-fill: white;" text="Crear" textAlignment="CENTER" textFill="WHITE">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <effect>
         <Glow />
      </effect>
      <font>
         <Font name="SansSerif Regular" size="13.0" />
      </font></Button>

    <Label fx:id="lblMensaje" textFill="red" wrapText="true" />

                <!-- Enlace para ir al Login -->
    <Hyperlink alignment="CENTER" contentDisplay="CENTER" onAction="#abrirLogin" style="-fx-text-fill: #0066cc; -fx-font-size: 13px;" text="¿Ya tienes cuenta? Inicia sesión">
      <effect>
         <Glow level="0.14" />
      </effect>
   </Hyperlink>

</VBox>
