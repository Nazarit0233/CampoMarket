<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f4f4f4; -fx-padding: 40;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="uniajc.controlador.CuentaControladorVista">

    <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Crear Cuenta" />

    <!-- Campos comunes -->
    <TextField fx:id="txtNombre" prefWidth="250" promptText="Nombre completo" />
    <TextField fx:id="txtCorreo" prefWidth="250" promptText="Correo electrónico" />
    <PasswordField fx:id="txtContrasena" prefWidth="250" promptText="Contraseña" />

    <!-- Selección de rol -->
    <ComboBox fx:id="comboRol" onAction="#mostrarCamposPorRol" prefWidth="250" promptText="Seleccione su rol" />

    <!-- Contenedor dinámico para campos del rol -->
    <VBox fx:id="contenedorCamposPorRol" alignment="CENTER" spacing="10">
        <!-- Aquí se añadirán los campos dinámicos según el rol -->
    </VBox>

    <!-- Botón para crear la cuenta -->
    <Button onAction="#crearCuenta" style="-fx-background-color: #2E8B57; -fx-text-fill: white;" text="Crear Cuenta" />

    <Label fx:id="lblMensaje" textFill="red" wrapText="true" />

    <!-- Enlace para ir al Login -->
    <Hyperlink onAction="#abrirLogin" style="-fx-text-fill: #0066cc; -fx-font-size: 13px;" text="¿Ya tienes cuenta? Inicia sesión" />

</VBox>
